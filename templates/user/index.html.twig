{% extends 'baseAdministration.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
<section class="banner_area">
      <div class="banner_inner d-flex align-items-center">
        <div class="overlay"></div>
        <div class="container">
          <div class="row justify-content-center">
            <div class="col-lg-6">
              <div class="banner_content text-center">
                <h2>Welcome to Dashborad</h2>
                <div class="page_link">
                  <a href="{{path('index')}}">Home</a>
                  <a href="{{path('admin_category_index')}}">User</a>
                  <a href="course-details.html">Index User </a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
</section>  
    <h1>List  Users </h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Password</th>
                <th>Show</th>
                <th>Edit</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email [10:20]| raw}}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.password }}</td>
                <td>
                    <a href="{{ path('user_show', {'id': user.id}) }}" class="primary-btn ml-sm-3 ml-0">show</a>
                </td>
                <td> 
                    <a href="{{ path('user_edit', {'id': user.id}) }}" class="primary-btn ml-sm-3 ml-0">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('user_new') }}" class="primary-btn ml-sm-3 ml-0">Create new</a>
{% endblock %}
