{% extends 'baseIndex.html.twig' %}

{% block title %}Category index{% endblock %}

{% block body %}
    
<div class="row justify-content-center">
  <div class="col-lg-5">
    <div class="main_title">
      <h1>Category index</h1>
        <a href="{{ path('category_new') }}" class="primary-btn ml-sm-3 ml-0">Create new Category</a>
    </div>
  </div>
</div>



    
    <!--================ End Popular Courses Area =================-->






<!--================ Start Popular Courses Area =================-->
  
<div class="popular_courses">
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-lg-5">
            <div class="main_title">
              <h2 class="mb-3">Our Popular Categories</h2>
              <p>
                Replenish man have thing gathering lights yielding shall you
              </p>
            </div>
          </div>
        </div>
        
        <div class="row">
          <!-- single course -->
        
          <div class="col-lg-12">
            <div class="owl-carousel active_course">
            {% for category in categories %}
              <div class="single_course">
                <div class="course_head">
                  <img src="{{ asset('uploads/images/' ~ category.image) }}" />
                </div>
                <div class="course_content">
                  <span class="price"></span>
                  <span class="tag mb-4 d-inline-block">{{ category.name }}</span>
                  <h4 class="mb-3">
                    <a href="{{ path('category_show', {'id': category.id}) }}">Show Detail et all books on this category</a>
                  </h4>
                  {% if is_granted('ROLE_ADMIN') %}
                   <h4 class="mb-3">
                    <a href="{{ path('category_edit', {'id': category.id}) }}">edit</a>
                   </h4>
                   {% endif %}
                  <p>
                    
                  </p>
                  <div
                    class="course_meta d-flex justify-content-lg-between align-items-lg-center flex-lg-row flex-column mt-4"
                  >
                    <div class="authr_meta">
                      <img src="{{asset('montemplete/img/courses/author1.png')}}" alt="" />
                      <span class="d-inline-block ml-2">Cameron</span>
                    </div>
                    <div class="mt-lg-0 mt-3">
                      <span class="meta_info mr-4">
                        <a href="#"> <i class="ti-user mr-2"></i>25 </a>
                      </span>
                      <span class="meta_info"
                        ><a href="#"> <i class="ti-heart mr-2"></i>35 </a></span>
                    </div>
                  </div>
                </div>
              </div> 
              {% else %}
            
                <p colspan="4">no records found<p>
            
        {% endfor %}
              </div>

              
            </div>
          
       
        
         </div>
      </div>
    </div>
    <!--================ End Popular Courses Area =================-->




{% endblock %}
